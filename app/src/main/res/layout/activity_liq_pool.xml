<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".factor.liquid.LiqPoolActivity"
    tools:ignore="LabelFor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textKin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Podaj parametry cieczy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLepk"
                android:layout_width="165dp"
                android:layout_height="48dp"
                android:layout_marginTop="70dp"
                android:text="@string/wsp_kin"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textDyf"
                android:layout_width="195dp"
                android:layout_height="48dp"
                android:layout_marginTop="70dp"
                android:text="@string/molek"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editKin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/editDyf" />

            <Space
                android:layout_width="80dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/editDyf"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/editSr" />

        </LinearLayout>

        <TextView
            android:id="@+id/textSch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="Liczba Schmita"
            android:textAlignment="center"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editSch"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSch"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="numberDecimal" />


        <TextView
            android:id="@+id/textSr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:text="Podaj średnicę rozlewiska:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="240dp"
            android:layout_toRightOf="@id/textSr"
            android:nextFocusDown="@+id/editTemp"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textSrUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:layout_toRightOf="@id/editSr"
            android:text="@string/metr"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textAh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="305dp"
            android:text="@string/lubAh"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editAh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="295dp"
            android:layout_toRightOf="@id/textAh"
            android:ems="10"
            android:nextFocusDown="@+id/editTemp"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textAhUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="305dp"
            android:layout_toRightOf="@id/editAh"
            android:text="@string/unit_ah"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textTemPar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:gravity="center"
            android:text="@string/prez_temp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTemp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:nextFocusDown="@+id/editPpar" />

            <TextView
                android:id="@+id/textTunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:text="@string/unit_T"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editPpar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:ems="10"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textParUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:text="@string/unit_p"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/dalej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"
            android:text="@string/dalej" />

    </RelativeLayout>
</ScrollView>